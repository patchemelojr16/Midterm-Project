#include <iostream>
#include <string>
#include <vector>
#include <iomanip>

using namespace std;

struct Student {
    string name;
    double grade;
    string status;
};

int main() {
    int numStudents;
    vector<Student> students;

    cout << "========================================" << endl;
    cout << "    STUDENT GRADE MANAGEMENT SYSTEM     " << endl;
    cout << "========================================" << endl;

    cout << "Enter the number of students: ";
    cin >> numStudents;

    for (int i = 0; i < numStudents; i++) {
        Student s;
        cout << "\nEnter name for student " << i + 1 << ": ";
        cin.ignore();
        getline(cin, s.name);
        cout << "Enter final grade: ";
        cin >> s.grade;

        // Logic for Pass/Fail status
        if (s.grade >= 75) {
            s.status = "Passed";
        } else {
            s.status = "Failed";
        }

        students.push_back(s);
    }

    // Displaying the final management report
    cout << "\n\n" << setw(20) << left << "STUDENT NAME" 
         << setw(10) << "GRADE" 
         << setw(10) << "STATUS" << endl;
    cout << "------------------------------------------" << endl;

    for (const auto& s : students) {
        cout << setw(20) << left << s.name 
             << setw(10) << fixed << setprecision(2) << s.grade 
             << setw(10) << s.status << endl;
    }

    cout << "==========================================" << endl;
    return 0;
}
