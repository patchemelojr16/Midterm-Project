#include <iostream>
#include <string>
#include <vector>
#include <iomanip>

using namespace std;

struct Student {
    string name;
    double grade;
    string status;
};

int main() {
    int numStudents;
    vector<Student> students;
    string name,code, name2,date,black;

    cout << "Enter Your name: ";
    getline (cin,name);
    cout << "Enter Your Subject Instructor: ";
    getline (cin,name2);
    cout << "Enter Date: ";
    getline (cin,date);
    cout << "Enter Your Code: ";
    getline (cin,code);
    cout << "Enter Your Black/year: ";
    getline (cin, black);

    cout << "========================================" << endl;
    cout << "Submitted By                : " << name << endl;
    cout << "Submitted To                : " << name2 << endl;
    cout << "Date                        : " << date << endl;
    cout << "Black/Year                  : " << black << endl;
    cout << "code                        : " << code  << endl;
    cout << "======================================== "<< endl;
    
    
    cout << "\n========================================" << endl;
    cout << "    STUDENT GRADE MANAGEMENT SYSTEM     " << endl;
    cout << "========================================" << endl;
    cout << " Welcome! This system allows you to: " << endl;
    cout << " 1. Input Student Names" << endl;
    cout << " 2. Record Final Grades" << endl;
    cout << " 3. Generate Pass/Fail Report" << endl;
    cout << "========================================" << endl;

    cout << "\nTo begin, enter the number of students: ";
    cin >> numStudents;
    cin.ignore(); 

    
    for (int i = 0; i < numStudents; i++) {
        Student s;
        cout << "\n--- Student #" << i + 1 << " ---" << endl;
        cout << "Enter Full Name: ";
        getline(cin, s.name);
        
        cout << "Enter Final Grade: ";
        cin >> s.grade;
        cin.ignore(); 

        if (s.grade >= 75) {
            s.status = "Passed";
        } else {
            s.status = "Failed";
        }

        students.push_back(s);
    }

   
    cout << "\n\n" << setw(25) << left << "STUDENT NAME" 
         << setw(10) << "GRADE" 
         << setw(10) << "STATUS" << endl;
    cout << "-----------------------------------------------" << endl;

    for (const auto& s : students) {
        cout << setw(25) << left << s.name 
             << setw(10) << fixed << setprecision(2) << s.grade 
             << setw(10) << s.status << endl;
    }

    cout << "===============================================" << endl;
    cout << "End of Report. Thank you for using the system!" << endl;

    return 0;
}
